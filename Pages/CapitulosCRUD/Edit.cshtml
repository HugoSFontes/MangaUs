@page
@model MangaUs.Pages.CapitulosCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Capitulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Capitulo.CapituloId" />
            <div class="form-group">
                <label asp-for="Capitulo.NumeroCapitulo" class="control-label"></label>
                <input asp-for="Capitulo.NumeroCapitulo" class="form-control" />
                <span asp-validation-for="Capitulo.NumeroCapitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capitulo.DtAtualizacao" class="control-label"></label>
                <input asp-for="Capitulo.DtAtualizacao" class="form-control" />
                <span asp-validation-for="Capitulo.DtAtualizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capitulo.MangaId" class="control-label"></label>
                <select asp-for="Capitulo.MangaId" class="form-control" asp-items="ViewBag.MangaId"></select>
                <span asp-validation-for="Capitulo.MangaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
